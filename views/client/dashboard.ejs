<div class="dashboard-content">
    <!-- Tab Content Container -->
    <div class="tab-container">

    <div class="tab-content active" id="credentials">
        <div class="form-group">
            <label for="platform">
                Platform <span class="tooltip" data-tooltip="Select the platform you want to automate">‚ìò</span>
            </label>
            <select id="platform" name="platform" required>
                <option value="">Select Platform</option>
                <option value="linkedin">LinkedIn</option>
                <option value="twitter">Twitter</option>
                <option value="email">Email</option>
            </select>
        </div>
        <div class="form-group">
            <label for="username">
                Username/Email <span class="tooltip" data-tooltip="Your login credentials for the selected platform">‚ìò</span>
            </label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="password">
                Password <span class="tooltip" data-tooltip="Your password (encrypted and stored securely)">‚ìò</span>
            </label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn-primary" id="save-credentials">Save & Continue</button>
    </div>

    <div class="tab-content" id="upload">
        <div class="upload-section">
            <div class="file-drop-zone" id="fileDropZone">
                <div class="drop-icon">üìÅ</div>
                <p>Drag & Drop your CSV file here or <span class="browse-link">browse</span></p>
                <input type="file" id="csvFile" accept=".csv" hidden>
            </div>
            <div class="file-info" id="fileInfo" style="display: none;">
                <div class="file-details">
                    <span class="file-name"></span>
                    <span class="file-size"></span>
                </div>
                <div class="upload-progress">
                    <div class="progress-bar">
                        <div class="progress-fill"></div>
                    </div>
                    <span class="progress-text">0%</span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn-primary" id="upload-file">Upload & Validate</button>
    </div>

    <div class="tab-content" id="note">
        <div class="form-group">
            <label for="campaign-name">
                Campaign Name <span class="tooltip" data-tooltip="Give your campaign a descriptive name">‚ìò</span>
            </label>
            <input type="text" id="campaign-name" name="campaign-name" placeholder="e.g., LinkedIn Outreach Q4 2025">
        </div>
        <div class="form-group">
            <label for="automation-type">
                Automation Type <span class="tooltip" data-tooltip="Choose the type of automation to run">‚ìò</span>
            </label>
            <select id="automation-type" name="automation-type">
                <option value="enrichment">Contact Enrichment</option>
                <option value="email_outreach">Email Outreach</option>
                <option value="scraping">Data Scraping</option>
                <option value="linkedin_automation">LinkedIn Automation</option>
            </select>
        </div>
        <div class="form-group">
            <label for="client-note">
                Instructions & Notes <span class="tooltip" data-tooltip="Detailed instructions for the automation">‚ìò</span>
            </label>
            <textarea id="client-note" name="note" rows="4" placeholder="Enter your specific requirements, targeting criteria, or special instructions..."></textarea>
        </div>
        <button type="button" class="btn-primary" id="save-config">Save Configuration</button>
    </div>

    <div class="tab-content" id="activity">
        <div class="activity-header">
            <h3>Real-time Activity Monitor</h3>
            <div class="activity-controls">
                <select id="log-filter">
                    <option value="all">All Logs</option>
                    <option value="success">Success</option>
                    <option value="error">Errors</option>
                    <option value="info">Info</option>
                </select>
                <button class="btn-secondary" id="export-logs">Export Logs</button>
                <button class="btn-secondary" id="clear-logs">Clear</button>
            </div>
        </div>
        <div class="activity-window" id="activity-window">
            <div class="loading-logs">
                <i class="fas fa-spinner fa-spin"></i>
                <p>Loading activity logs...</p>
            </div>
        </div>
    </div>

    <div class="tab-content" id="performance">
        <div class="performance-header">
            <h2>Campaign Performance</h2>
            <select id="campaign-filter">
                <option value="all">All Campaigns</option>
                <% if (client.campaigns && client.campaigns.length > 0) { %>
                    <% client.campaigns.forEach(campaign => { %>
                        <option value="<%= campaign._id %>"><%= campaign.name %></option>
                    <% }); %>
                <% } %>
            </select>
        </div>
        <div class="performance-grid">
            <!-- Performance data will be rendered here by JavaScript -->
        </div>
        <div class="performance-chart-container">
            <canvas id="performanceChart"></canvas>
        </div>
    </div>

    <!-- Admin Messages Tab -->
    <div class="tab-content" id="messages">
        <div class="messages-tab-container">
            <div class="messages-header-tab">
                <h2>Admin Messages</h2>
                <div class="messages-info">
                    <span class="online-status">Admin is online</span>
                </div>
            </div>

            <div class="messages-content-tab">
                <div class="conversation-area-tab">
                    <div class="messages-list-tab" id="messages-list-tab">
                        <!-- Messages will be loaded here -->
                        <% if (typeof client !== 'undefined' && client && client.activityLogs) { %>
                            <% client.activityLogs.forEach(log => { %>
                                <% if (log.source === 'admin') { %>
                                    <div class="message admin-message">
                                        <div class="message-avatar">
                                            <div class="avatar admin-avatar">A</div>
                                        </div>
                                        <div class="message-content">
                                            <div class="message-header">
                                                <span class="message-sender">Admin</span>
                                                <span class="message-time"><%= new Date(log.timestamp).toLocaleString() %></span>
                                            </div>
                                            <div class="message-text">
                                                <%= log.message %>
                                            </div>
                                        </div>
                                    </div>
                                <% } else if (log.source === 'client') { %>
                                    <div class="message client-message">
                                        <div class="message-content">
                                            <div class="message-header">
                                                <span class="message-sender">You</span>
                                                <span class="message-time"><%= new Date(log.timestamp).toLocaleString() %></span>
                                            </div>
                                            <div class="message-text">
                                                <%= log.message %>
                                            </div>
                                        </div>
                                        <div class="message-avatar">
                                            <div class="avatar client-avatar">C</div>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <div class="no-messages-tab">
                                <div class="no-messages-icon">üí¨</div>
                                <h3>No messages yet</h3>
                                <p>Start a conversation with the admin team</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="message-input-area-tab">
                    <form class="message-form-tab" id="message-form-tab">
                        <div class="input-group-tab">
                            <textarea 
                                id="message-input-tab" 
                                placeholder="Type your message to admin..." 
                                rows="3" 
                                required
                            ></textarea>
                            <button type="submit" class="send-button-tab" id="send-message-tab">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                                    <path d="M22 2L11 13M22 2L15 22L11 13M22 2L2 9L11 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Send
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
