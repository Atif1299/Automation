<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/auth.css">

<main class="auth-main-content">
    <div class="auth-card-container large">
        <div class="auth-form-section compact">
            <h1 class="auth-title">Create Account</h1>
            
            <div id="error-message" class="error-message"></div>
            <div id="success-message" class="success-message"></div>
            
            <form id="register-form">
                <div class="form-group compact">
                    <input type="text" id="name" name="name" placeholder="Full Name" required>
                    <span class="input-icon"><i class="fas fa-user"></i></span>
                </div>
                
                <div class="form-group compact">
                    <input type="email" id="email" name="email" placeholder="Email Address" required>
                    <span class="input-icon"><i class="fas fa-envelope"></i></span>
                </div>
                
                <div class="form-group compact">
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                </div>
                
                <div class="form-group compact">
                    <input type="password" id="confirm-password" name="confirmPassword" placeholder="Confirm Password" required>
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                </div>
                
                <button type="submit" class="auth-button register-theme" id="register-btn">
                    Create Account
                </button>
            </form>
            
            <div class="auth-links">
                <p>Already have an account? <a href="/auth/client-login">Sign in</a></p>
                <p><a href="/">‚Üê Back to Home</a></p>
            </div>
        </div>
        
        <div class="auth-welcome-section register-theme">
            <h2 class="welcome-title">START YOUR<br>AUTOMATION!</h2>
            <p class="welcome-subtitle">
                Join thousands of professionals automating their LinkedIn outreach 
                and contact enrichment processes.
            </p>
        </div>
    </div>
</main>

<script src="/js/auth.js"></script>
<%- include('../partials/footer') %>
