<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/auth.css">

<main class="auth-main-content">
    <div class="auth-card-container">
        <div class="auth-form-section">
            <h1 class="auth-title">Forgot Password</h1>
            
            <div id="error-message" class="error-message"></div>
            <div id="success-message" class="success-message"></div>
            
            <form id="forgot-password-form">
                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Email Address" required autocomplete="email">
                    <span class="input-icon"><i class="fas fa-envelope"></i></span>
                </div>
                
                <button type="submit" class="auth-button client-theme" id="reset-btn">
                    Send Reset Link
                </button>
            </form>
            
            <div class="auth-links">
                <p><a href="/auth/client-login">Back to Login</a></p>
            </div>
        </div>
        
        <div class="auth-welcome-section client-theme">
            <h2 class="welcome-title">RESET<br>YOUR PASSWORD</h2>
            <p class="welcome-subtitle">
                Enter your email address to receive a link to reset your password.
            </p>
        </div>
    </div>
</main>

<script src="/js/auth.js"></script>
</body>
</html>
