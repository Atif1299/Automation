<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/auth.css">

<main class="auth-main-content">
    <div class="auth-card-container">
        <div class="auth-form-section">
            <h1 class="auth-title">Reset Password</h1>
            
            <div id="error-message" class="error-message"></div>
            <div id="success-message" class="success-message"></div>
            
            <form id="reset-password-form">
                <input type="hidden" id="token" name="token" value="<%= token %>">
                
                <div class="form-group">
                    <input type="password" id="password" name="password" placeholder="New Password" required autocomplete="new-password">
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                </div>
                
                <div class="form-group">
                    <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm New Password" required autocomplete="new-password">
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                </div>
                
                <button type="submit" class="auth-button client-theme" id="update-password-btn">
                    Update Password
                </button>
            </form>
            
            <div class="auth-links">
                <p><a href="/auth/client-login">Back to Login</a></p>
            </div>
        </div>
        
        <div class="auth-welcome-section client-theme">
            <h2 class="welcome-title">SECURE<br>YOUR ACCOUNT</h2>
            <p class="welcome-subtitle">
                Choose a strong, new password to protect your account.
            </p>
        </div>
    </div>
</main>

<script src="/js/auth.js"></script>
</body>
</html>
