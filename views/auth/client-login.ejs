<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/auth.css">

<main class="auth-main-content">
    <div class="auth-card-container">
        <div class="auth-form-section">
            <h1 class="auth-title">Welcome Back</h1>
            
            <div id="error-message" class="error-message"></div>
            <div id="success-message" class="success-message"></div>
            
            <form id="login-form">
                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Email Address" required>
                    <span class="input-icon"><i class="fas fa-envelope"></i></span>
                </div>
                
                <div class="form-group">
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                </div>
                
                <button type="submit" class="auth-button client-theme" id="login-btn">
                    Sign In
                </button>
            </form>
            
            <div class="auth-links">
                <p>Don't have an account? <a href="/auth/client-register">Create one</a></p>
                <p><a href="/">‚Üê Back to Home</a></p>
            </div>
        </div>
        
        <div class="auth-welcome-section client-theme">
            <h2 class="welcome-title">READY TO<br>AUTOMATE!</h2>
            <p class="welcome-subtitle">
                Access your dashboard to manage campaigns, upload contact lists, 
                and track your automation progress.
            </p>
        </div>
    </div>
</main>

<script src="/js/auth.js"></script>
</body>
</html>
